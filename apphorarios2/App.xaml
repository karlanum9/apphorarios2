<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Solo colores azules -->
            <Color x:Key="PrimaryBlue">#1E40AF</Color>
            <Color x:Key="PrimaryDarkBlue">#1E3A8A</Color>
            <Color x:Key="PrimaryLightBlue">#3B82F6</Color>
            <Color x:Key="BackgroundLight">#F8FAFC</Color>
            <Color x:Key="TextDark">#1F2937</Color>
            <Color x:Key="DangerRed">#EF4444</Color>
            <Color x:Key="SuccessGreen">#10B981</Color>

            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,20,0,10" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}" />
            </Style>

            <Style x:Key="ButtonPrimary" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin" Value="20,10" />
            </Style>

            <Style x:Key="ButtonSecondary" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLightBlue}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin" Value="20,10" />
            </Style>

            <Style x:Key="ButtonBack" TargetType="Button">
                <Setter Property="BackgroundColor" Value="LightGray" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin" Value="20,10" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
