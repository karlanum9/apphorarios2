<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.DocenteEliminado"
             Title="Docente Eliminado">

    <ScrollView>
        <VerticalStackLayout Spacing="40" Padding="30" VerticalOptions="Center">

            <Label Text="Borrar Docentes" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Label Text="Docente Eliminado" 
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="Blue"
                   FontAttributes="Bold"/>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="50"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>