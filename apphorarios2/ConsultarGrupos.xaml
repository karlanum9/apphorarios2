<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.ConsultarGrupos"
             Title="Consultar Grupos">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Consultar Grupos" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Estos son los grupos guardados:" 
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <Label Text="Lista de Grupos:" 
                           FontSize="14"/>

                    <CollectionView x:Name="ListaGrupos">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <Label Text="{Binding .}" 
                                           FontSize="14"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>