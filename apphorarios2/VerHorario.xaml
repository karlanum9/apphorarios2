<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.VerHorario"
             Title="Horario">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Horario" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="LblGrupo" 
                           Text="Grupo: SAMPRG" 
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <!-- Aquí iría la lista o grid con el horario específico -->
                    <Label Text="Información del horario aparecerá aquí" 
                           FontSize="14"
                           HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>