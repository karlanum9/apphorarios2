<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.BuscarMateriaPopup"
             Title="Buscar Materia">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Buscar Materia" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="15">
                    <Entry x:Name="TxtBuscarMateria" 
                           Placeholder="Buscar materia..."
                           HeightRequest="50"/>

                    <CollectionView x:Name="ListaMaterias">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <Label Text="{Binding .}" 
                                           FontSize="14"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button x:Name="BtnSeleccionar" 
                            Text="Seleccionar" 
                            Clicked="BtnSeleccionar_Clicked"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnCancelar" 
                    Text="Cancelar" 
                    Clicked="BtnCancelar_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>