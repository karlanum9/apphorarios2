<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.ConsultaDocente"
             Title="Docente">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <Label Text="Docente" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Label Text="¿Dónde está mi clase?" 
                   FontSize="18"
                   HorizontalOptions="Center"/>

            <Label Text="Consulta tu aula en tiempo real" 
                   FontSize="14"
                   HorizontalOptions="Center"/>

            <Frame>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Selecciona tu nombre" 
                           FontSize="14"
                           FontAttributes="Bold"/>
                    <Picker x:Name="PickerDocente" 
                            Title="Selecciona tu nombre"/>

                    <Label Text="Selecciona una hora" 
                           FontSize="14"
                           FontAttributes="Bold"/>
                    <Picker x:Name="PickerHora" 
                            Title="Selecciona una hora"/>

                    <Button x:Name="BtnConsultar" 
                            Text="Consultar" 
                            Clicked="BtnConsultar_Clicked"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="FrameResultado" 
                   IsVisible="False">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="LblMaestro" 
                           Text="Maestro:" 
                           FontSize="14"/>
                    <Label x:Name="LblGrupo" 
                           Text="Grupo: SAMPROG" 
                           FontSize="14"/>
                    <Label x:Name="LblHora" 
                           Text="Hora: 9am - 10pm" 
                           FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>