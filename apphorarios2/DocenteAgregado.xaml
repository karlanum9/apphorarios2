<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.DocenteAgregado"
             Title="Docente Agregado">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <Label Text="Agregar Docentes" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="20">
                    <Label Text="¡Nuevo docente agregado!" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Green"
                           HorizontalOptions="Center"/>

                    <Label x:Name="LblNombreDocente" 
                           Text="(Nombre del docente que agrego el usuario)" 
                           FontSize="16"
                           HorizontalOptions="Center"/>

                    <Label Text="Podrás ver el nuevo docente en &quot;Consultar Docentes&quot;, también podrás usarlo en horarios, asignarle materias y grupos." 
                           FontSize="14"
                           HorizontalTextAlignment="Center"/>

                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>