<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.AdministracionLogin"
             Title="Administración Login">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="30" VerticalOptions="Center">

            <Label Text="Administración" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Label Text="¡Hola!, Por favor ingresa la contraseña para acceder" 
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"></Label>

            <Entry x:Name="TxtPassword" 
                   Placeholder="Contraseña" 
                   IsPassword="True"
                   HeightRequest="50"/>

            <Button x:Name="BtnIngresar" 
                    Text="Ingresar" 
                    Clicked="BtnIngresar_Clicked"
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>