<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.AcercaDe"
             Title="Acerca De">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <Label Text="Acerca De" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="20">
                    <Label Text="apphorarios2" 
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <Label Text="Sistema de Gestión de Horarios" 
                           FontSize="16"
                           HorizontalOptions="Center"/>

                    <Label Text="Versión: 1.0.0" 
                           FontSize="14"
                           HorizontalOptions="Center"/>

                    <Label Text="Desarrollado para la gestión eficiente de horarios académicos" 
                           FontSize="14"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="© 2024 - Todos los derechos reservados" 
                           FontSize="12"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>