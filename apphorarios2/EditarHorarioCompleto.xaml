<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.EditarHorarioCompleto"
             Title="Editar Horario">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Editar Horario" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Editar informaciÃ³n del horario" 
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <!-- Controles de ejemplo -->
                    <Label Text="Maestro:"/>
                    <Picker x:Name="PickerMaestro" Title="Seleccionar maestro"/>

                    <Label Text="Materia:"/>
                    <Picker x:Name="PickerMateria" Title="Seleccionar materia"/>

                    <Label Text="Grupo:"/>
                    <Picker x:Name="PickerGrupo" Title="Seleccionar grupo"/>

                    <Button x:Name="BtnGuardar" 
                            Text="Guardar Cambios" 
                            Clicked="BtnGuardar_Clicked"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>