<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.MenuAdministracion"
             Title="Menú Administración">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="30" VerticalOptions="Center">

            <Label Text="Administración" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Label Text="Elige una opción" 
                   FontSize="18"
                   HorizontalOptions="Center"/>

            <VerticalStackLayout Spacing="15">
                <Button x:Name="BtnHorarios" 
                        Text="Horarios" 
                        Clicked="BtnHorarios_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnGrupos" 
                        Text="Grupos" 
                        Clicked="BtnGrupos_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnDocentes" 
                        Text="Docentes" 
                        Clicked="BtnDocentes_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnMaterias" 
                        Text="Materias" 
                        Clicked="BtnMaterias_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnVolver" 
                        Text="Volver" 
                        Clicked="BtnVolver_Clicked"
                        HeightRequest="50"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>