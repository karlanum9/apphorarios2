<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.AsignarHorariosCompleto"
             Title="Asignar Horarios">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Asignar Horarios" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Crear nuevo horario" 
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <Label Text="Maestro:"/>
                    <Picker x:Name="PickerMaestro" Title="Seleccionar maestro"/>

                    <Label Text="Materia:"/>
                    <Picker x:Name="PickerMateria" Title="Seleccionar materia"/>

                    <Label Text="Grupo:"/>
                    <Picker x:Name="PickerGrupo" Title="Seleccionar grupo"/>

                    <Label Text="Día:"/>
                    <Picker x:Name="PickerDia" Title="Seleccionar día"/>

                    <Label Text="Aula:"/>
                    <Picker x:Name="PickerAula" Title="Seleccionar aula"/>

                    <Label Text="Hora:"/>
                    <Picker x:Name="PickerHora" Title="Seleccionar hora"/>

                    <Button x:Name="BtnCrear" 
                            Text="Crear Horario" 
                            Clicked="BtnCrear_Clicked"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>