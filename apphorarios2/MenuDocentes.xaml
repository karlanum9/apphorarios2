<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.MenuDocentes"
             Title="Menú Docentes">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="30" VerticalOptions="Center">

            <Label Text="Docentes" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Label Text="Qué deseas hacer?" 
                   FontSize="18"
                   HorizontalOptions="Center"/>

            <VerticalStackLayout Spacing="15">
                <Button x:Name="BtnAgregarDocentes" 
                        Text="Agregar Docentes" 
                        Clicked="BtnAgregarDocentes_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnBorrarDocentes" 
                        Text="Borrar Docentes" 
                        Clicked="BtnBorrarDocentes_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnEditarDocentes" 
                        Text="Editar Docentes" 
                        Clicked="BtnEditarDocentes_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnConsultarDocentes" 
                        Text="Consultar Docentes" 
                        Clicked="BtnConsultarDocentes_Clicked"
                        HeightRequest="50"/>

                <Button x:Name="BtnVolver" 
                        Text="Volver" 
                        Clicked="BtnVolver_Clicked"
                        HeightRequest="50"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>