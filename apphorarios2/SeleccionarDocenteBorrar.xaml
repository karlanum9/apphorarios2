<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.SeleccionarDocenteBorrar"
             Title="Borrar Docentes">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Borrar Docentes" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Selecciona el docente que deseas borrar:" 
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <Picker x:Name="PickerDocente" 
                            Title="Selecciona un docente"/>

                    <Button x:Name="BtnSiguiente" 
                            Text="Siguiente" 
                            Clicked="BtnSiguiente_Clicked"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>