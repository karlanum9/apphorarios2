<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apphorarios2.AgregarMaterias"
             Title="Agregar Materias">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Agregar Materias" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold"/>

            <Frame>
                <VerticalStackLayout Spacing="20">
                    <Label Text="Escribe el nombre de la materia que deseas agregar. (Todo en mayÃºsculas, con espacios entre cada palabra, sin caracteres especiales y sin acentos)." 
                           FontSize="14"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="Ej: CONCIENCIA HISTORICA II MEXICO DURANTE EL EXPANSIONISMO CAPITALISTA" 
                           FontSize="14"
                           FontAttributes="Italic"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>

                    <Entry x:Name="TxtNombreMateria" 
                           Placeholder="Nombre de la materia" 
                           HeightRequest="50"/>

                    <Button x:Name="BtnSiguiente" 
                            Text="Siguiente" 
                            Clicked="BtnSiguiente_Clicked"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="BtnVolver" 
                    Text="Volver" 
                    Clicked="BtnVolver_Clicked"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>